<html>

<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div class="container">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/produtos">Consultar</a></li>
            <li role="presentation"><a href="/produtos/form">Cadastrar</a></li>
            <li role="presentation" class="active"><a href="/promocoes/form">Promocoes</a></li>
        </ul>
        <br />
        <div class="row">
            <div>
                <% if(erros){ %>
                    <ul style="list-style-type: none;">
                        <% for(var i = 0;i < erros.length;i++){ %>
                            <li>
                                <div class="alert alert-danger" role="alert">
                                    <%= erros[i].param %> -
                                        <%= erros[i].msg %>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                    <% } %>
            </div>
        </div>
        <form action="/promocoes" method="post">
            <div class="form-group">
                <label for="titulo">Mensagem</label><br/>
                <input class="form-control" type="text" name="titulo" placeholder="Digite a mensagem da promoÃ§ao..." />
            </div>
            <div class="form-group">
                <label for="titulo">Produtos</label><br/>
                <select name="livro[id]" class="form-control">
                  <%for(var i=0;i<livro.length;i++){%>
                  <option value="<%=livro[i].id%>"><%=livro[i].titulo%></option>
                  <%}%>
                </select>
            </div>
            <br/>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Salvar" />
            </div>
        </form>
    </div>
</body>

</html>
