<html>
<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
</head>
<body>

<div class="container">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/produtos">Consultar</a></li>
            <li role="presentation" class="active"><a href="/produtos/form">Cadastrar</a></li>
        </ul>
    <br />
    <div class="row">
        <div>
            <% if(erros){ %>
            <ul style="list-style-type: none;">
                <% for(var i = 0;i < erros.length;i++){ %>
                <li>
                    <div class="alert alert-danger" role="alert">
                        <%= erros[i].param %> - <%= erros[i].msg %>
                    </div>
                </li>
                <% } %>
            </ul>
            <% } %>
        </div>
    </div>
    <form action="/produtos" method="post">
        <div class="form-group">
            <label for="titulo">Titulo</label><br/>
            <input class="form-control" type="text" name="titulo" value="<%= produto.titulo %>"
                   placeholder="Digite o título do livro..."/>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label><br/>
            <textarea class="form-control" cols="30" rows="5" name="descricao"
                      placeholder="Digite a descricao do livro..."><%= produto.descricao %></textarea>
        </div>
        <div class="form-group">
            <label for="preco">Preço</label><br/>
            <input class="form-control" type="text" name="preco" value="<%= produto.preco %>"
                   placeholder="Digite o preço do livro..."/>
        </div>
        <br/>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Salvar"/>
        </div>
    </form>
</div>
</body>
</html>
