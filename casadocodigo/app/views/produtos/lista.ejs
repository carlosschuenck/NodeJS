<html>
<head>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="container">
    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="/produtos">Consultar</a></li>
        <li role="presentation"><a href="/produtos/form">Cadastrar</a></li>
    </ul>
    <br />
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Preco</th>
            <th></th>
            <th></th>
        </tr>
        <% for(var i = 0; i < lista.length; i++){ %>
        <tr>
            <td><%= lista[i].id %></td>
            <td><%= lista[i].titulo %></td>
            <td><%= lista[i].descricao %></td>
            <td><%= lista[i].preco %></td>
            <td>
                <a>
                    <img src="/img/editar.png" width="20px;" height="20px;">
                </a>
            </td>
            <td>
                <form action="/produtos" method="PUT">
                    <button type="submit">
                        <img src="/img/excluir.png" width="20px;" height="20px;" onsubmit="c" >

                    </button>
                    <input class="btn btn-primary" type="submit" value="Salvar"/>
                </form>
            </td>

        </tr>
        <% } %>
    </table>
</div>
</body>
</html>
